<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Shopping List Server</display-name>

  <listener>
    <listener-class>com.brotherlogic.shopping.ContextListener</listener-class>
  </listener>

  <!-- For the main page stuff -->
  <servlet>
    <servlet-name>VersionServlet</servlet-name>
    <servlet-class>com.brotherlogic.shopping.servlets.VersionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VersionServlet</servlet-name>
    <url-pattern>/version</url-pattern>
  </servlet-mapping>
</web-app>
